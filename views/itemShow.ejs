<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Heroic Features - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <link href="css/itemShow.css" rel="stylesheet"/>

    <script defer
  src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"></script>

  <script defer src="scripts/itemShow.js"></script>

 
  </head>

  <body>

<!-- Page Content -->
<div class="container">

  <!-- Portfolio Item Heading -->
  <h1 class="my-4"> <%=showItem.name%></h1>

  <!-- Portfolio Item Row -->
  <div class="row">

    <div class="col-md-8">
      <img class="img-fluid" id="img-main" src=<%=showItem.img[0]%> alt="">
    </div>

    <div class="col-md-4">
      <h3 class="my-3"><%=showItem.name%> Price</h3>
        <%= showItem.price%>$
        <div class="row mt-3">
            <a href="/order" class="btn btn-lg btn-primary">Buy Now</a>
        </div>
    </div>

  </div>
  <!-- /.row -->

  <!-- Related Projects Row -->

    <div class="row">
      <% showItem.img.forEach(img => { %>
        <div class="col-md-3 col-sm-6 mb-4">
                  <img class="img-fluid img-sub" src=<%=img%> alt="">
          </div>
       
      <% }) %>
     

    </div>
       <h3 class="my-3"><%=showItem.name%> Description</h3>
            <p><%= showItem.description%></p>
  <!-- /.row -->

</div>
<!-- /.container -->

</body>